{% if section.settings.message != blank %}
    <div class="announcement-bar" id="announcement-bar">
        <div class="announcement-container">
            <div class="announcement-content">
                {% if section.settings.link != blank %}
                    <a href="{{ section.settings.link }}" class="announcement-link">
                        {{ section.settings.message }}
                    </a>
                {% else %}
                    <span class="announcement-text">{{ section.settings.message }}</span>
                {% endif %}
            </div>
            {% if section.settings.dismissible %}
                <button class="announcement-close" onclick="dismissAnnouncement()" aria-label="Close announcement">
                    Ã—
                </button>
            {% endif %}
        </div>
    </div>

    <style>
        .announcement-bar {
            background-color: {{ section.settings.bg_color | default: '#000' }};
            color: {{ section.settings.text_color | default: '#fff' }};
            text-align: center;
            padding: 0.75rem 1rem;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            font-size: 0.875rem;
            position: relative;
            z-index: 100;
        }

        .announcement-container {
            display: flex;
            justify-content: center;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
        }

        .announcement-content {
            flex: 1;
        }

        .announcement-link {
            color: inherit;
            text-decoration: none;
            font-weight: 500;
        }

        .announcement-link:hover {
            text-decoration: underline;
        }

        .announcement-text {
            font-weight: 500;
        }

        .announcement-close {
            background: none;
            border: none;
            color: inherit;
            font-size: 1.5rem;
            cursor: pointer;
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 2rem;
            height: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0.7;
            transition: opacity 0.2s ease;
        }

        .announcement-close:hover {
            opacity: 1;
        }

        .announcement-bar[style*="display: none"] {
            display: none !important;
        }

        @media (max-width: 768px) {
            .announcement-bar {
                padding: 0.5rem 1rem;
                font-size: 0.8rem;
            }
        }
    </style>

    <script>
        function dismissAnnouncement() {
            const announcementBar = document.getElementById('announcement-bar');
            if (announcementBar) {
                announcementBar.style.display = 'none';
                localStorage.setItem('announcement-dismissed', 'true');
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            const announcementBar = document.getElementById('announcement-bar');
            if (announcementBar && localStorage.getItem('announcement-dismissed') === 'true') {
                announcementBar.style.display = 'none';
            }
        });
    </script>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Announcement Message",
      "default": "Free shipping on orders over $50!"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link URL (optional)",
      "info": "Make the announcement clickable"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "dismissible",
      "label": "Allow dismissal",
      "default": true,
      "info": "Let customers close the announcement bar"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "header"
    }
  ]
}
{% endschema %}
